    .pull-right
      = link_to '创建新话题', new_topic_path, :class => 'btn btn-small btn-success btn-new-topic'
    .welcome= Siteconf.welcome_tip.html_safe

  = render @topics
  .inner
    .pull-right= render 'shared/rss'
    &nbsp;
